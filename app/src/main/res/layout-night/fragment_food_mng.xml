<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="addFood"
    android:background="#FF424242"
    android:orientation="vertical"
    tools:context=".ui.Admin.dashboardFragments.FoodMngFragment"
    tools:layout_editor_absoluteX="13dp"
    tools:layout_editor_absoluteY="53dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="351dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/manageResFood"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnnewfood"
        android:layout_width="353dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:onClick="addFood"
        android:text="@string/add_food_item" />

    <Button
        android:id="@+id/button2"
        android:layout_width="353dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:onClick="viewFood"
        android:text="@string/managefood" />
</LinearLayout>